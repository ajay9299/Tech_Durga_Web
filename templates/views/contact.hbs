    <section class="contact">
      {{msg}}
      <form action="/contact" method="POST">

        <input type="text" name="name" class="box" placeholder="name" />
        <input type="email" name="email" class="box" placeholder="your email" />
        <input
          type="text"
          name="company"
          class="box"
          placeholder="Enter your company name"
        />
        <input
          type="text"
          name="phone"
          class="box"
          placeholder="Phone Number"
        />
        <textarea
          name="message"
          cols="30"
          rows="10"
          class="box message"
          placeholder="message"
        ></textarea>

        <input type="submit" class="btn" value="send message" />

      </form>

      <div class="content">

